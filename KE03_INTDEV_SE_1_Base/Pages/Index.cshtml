@page
@model KE03_INTDEV_SE_1_Base.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5 mb-4">
    <h1>Welkom bij Matrix Inc.</h1>
    <p class="lead">Wij leveren de beste onderdelen en producten voor jouw projecten.</p>
    <a asp-page="/Products/Index" class="btn btn-primary btn-lg">Bekijk onze producten</a>
</div>

<h2 class="mt-5">Onze klanten en hun bestellingen</h2>

@if (Model.Customers == null || !Model.Customers.Any())
{
    <p>Geen klanten gevonden.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Klant</th>
                <th>Aantal Orders</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Orders.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}
